{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "outDir": "dist",
    "module": "CommonJS",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/node_modules"],
  "include": ["src", "scripts"]
}
