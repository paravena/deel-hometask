{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "module": "CommonJS",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["**/node_modules"],
  "include": ["src", "scripts"]
}
